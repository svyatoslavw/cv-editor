{
  "name": "cv-editor",
  "version": "1.0.0",
  "description": "RNDMCV is more than just a resume building tool- it's an innovative platform designed to enhance your job search experience. Our goal is to help job seekers like you reach your full potential and land your dream job, while saving time and enjoying the process as much as we do creating it!",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "backend": "yarn workspace backend",
    "frontend": "yarn workspace frontend",
    "backend:lint": "yarn workspace backend lint",
    "frontend:lint": "yarn workspace frontend next lint",
    "docker:up": "docker-compose -f ./docker/postgres/docker-compose.yml up -d",
    "docker:down": "docker-compose -f ./docker/postgres/docker-compose.yml down"
  },
  "lint-staged": {
    "packages/frontend/**/*.{js,jsx,ts,tsx}": [
      "npx lint-staged"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
